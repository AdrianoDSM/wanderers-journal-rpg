datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int        @id @default(autoincrement())
  username  String     @unique
  email     String     @unique
  password  String
  campaigns Campaign[]
}

model Campaign {
  id          Int               @id @default(autoincrement())
  name        String
  description String
  userId      Int
  user        User              @relation(fields: [userId], references: [id])
  pcs         PC[]
  npcs        NPC[]
  notes       Note[]
  sessions    SessionRegister[]
}

model PC {
  id          Int      @id @default(autoincrement())
  name        String
  level       Int
  race        String
  class       String
  description String
  campaignId  Int
  campaign    Campaign @relation(fields: [campaignId], references: [id])
}

model NPC {
  id          Int      @id @default(autoincrement())
  name        String
  race        String
  class       String
  description String
  campaignId  Int
  campaign    Campaign @relation(fields: [campaignId], references: [id])
}

model Note {
  id         Int      @id @default(autoincrement())
  content    String
  campaignId Int
  campaign   Campaign @relation(fields: [campaignId], references: [id])
}

model SessionRegister {
  id           Int      @id @default(autoincrement())
  sessionCount Int
  lastSession  DateTime
  title        String
  campaignId   Int
  campaign     Campaign @relation(fields: [campaignId], references: [id])
}
